#!/bin/bash
#
# a simple dmenu session script 
#
###

DMENU='dmenu -i -h "22" -fn "monospace-11" -sb #9770ae '

choice=$(echo -e "reboot\nshutdown\nlogout\nsuspend\nhibernate" | $DMENU)

case "$choice" in
  reboot) shutdown -r now & ;;
  shutdown) shutdown -h now & ;;
  logout) i3-msg exit & ;;
  suspend) pm-suspend & ;;
  hibernate) pm-hibernate & ;;
esac
