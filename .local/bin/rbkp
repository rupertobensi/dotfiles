#!/bin/bash

## Simple rsync script...

#echo "Backup .dotfiles (1), everything (2) or prepare a Dropbox backup (3)? Choose an option - 1, 2 or 3."
#read option

read -p "Choose a number. Do you want to backup:
1. .dotfiles
2. everything
3. prepare a Dropbox (notes-only) backup?
" option

if [ $option -eq 1 ]
  then sudo rsync -aAXv --delete --progress --stats ~/.dotfiles/ /home/backups/.dotfiles/

elif [ $option -eq 2 ]
  then sudo rsync -aAXv --delete --progress --stats --exclude={"/dev/*","/proc/*","/sys/*","/tmp/*","/run/*","/mnt/*","/media/*","/lost+found","/home/.Trash-0/*","/home/backups/*","/home/Data/*","/home/System Volume Information/*","~/.thunderbird/*"} / /home/backups/bkp/

elif [ $option -eq 3 ]
  then sudo rsync -aAXv --delete --progress --stats /mnt/e/Robert/DROPBOX/ ~/Dropbox/
       dropbox &

else
  echo "Wrong choice..."
  fi
